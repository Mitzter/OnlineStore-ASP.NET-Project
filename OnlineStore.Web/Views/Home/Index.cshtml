@model IEnumerable<IndexViewModel>

@{
    ViewData["Title"] = "Home Page";
    var items = Model.ToList();
}
<style>
    .w1-sidebar {
        border: 1px solid brown;
        margin-right: auto;
        margin-left: 0;
    }

    .col-md-4 {
        padding-left: 0;
        padding-right: 0;
    }

    .w1-container {
        border-left: none;
        border-right: none;
    }

    .col-md-2 {
        border: 5px solid grey;
    }

    
</style>

@if (!Model.Any())
{
        <div class="mt-4 p-5 bg-light">
            <h1 class="display-4 text-light">Welcome to the best place for renting houses!</h1>
            <p class="lead">
                There are no houses in the system currently available, so why don't you just add one?
            </p>
            <hr class="my-4">
            <p class="lead">
            @if (User.Identity.IsAuthenticated)
            {
                        <a asp-controller="Home" asp-action="Add" class="btn btn-primary btn-lg" role="button">Add Item</a>
            }
            </p>
        </div>
}

<div class="container-fluid w1-container">
    <div class="row">
        <div class="col-md-2">
            <h5 class="text-light align-content-center">Top Forum Discussions</h5>
            <nav class="w1-sidebar w1-bar-block">
                <div class="container-fluid align-items-md-start w1-sidebar">
                    <h8 class="text-white">Forum post One</h8>
                    
                </div>
                <h2></h2>
                <div class="container-fluid align-items-md-start w1-sidebar">
                    <h8 class="text-white">Forum post Two</h8>
                   
                </div>
                <h2></h2>
                <div class="container-fluid align-items-md-start w1-sidebar">
                    <h8 class="text-white">Forum post Three</h8>
                   
                </div>
                <h2></h2>
                <div class="container-fluid align-items-md-start w1-sidebar">
                    <h8 class="text-white">Forum post Four</h8>
                    
                </div>
            </nav>
        </div>
        <div class="col-md-10">
            <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="mt-4 p-5">
                        <h1 class="display-4 text-yellow text-center text-danger font-weight-bold" style="font-family: 'Montserrat', sans-serif;">
                            DILOR
                        </h1>
                        <h1 class="display-4 text-yellow text-center text-danger font-weight-bold" style="font-family: 'Montserrat', sans-serif;">
                            Top Deals!
                        </h1>
                    </div>
                    <div>
                        @foreach (var item in items)
                        {
                                <div class="carousel-item @(item == items.First() ? "active" : string.Empty)">
                                    <h5 class="d-sm-flex justify-content-center align-items-center">
                                        <a class="btn btn-outline-danger text-light" asp-controller="House" asp-action="Details" asp-route-id="@item.Id">@item.Name</a>
                                    </h5>
                                    <div class="d-sm-flex justify-content-center align-items-center">
                                        <img class="d-block w-70" style="height:350px" src="@item.ImageUrl" alt="@item.Name">
                                        <div class="carousel-caption d-none d-md-block">
                                        </div>
                                    </div>
                                </div>
                        }
                    </div>
                </div>
                <div class="d-flex justify-content-center">
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

