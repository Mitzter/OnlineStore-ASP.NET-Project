
@model OrderFormModel
@{
    ViewData["Title"] = "Place Order";
}

<h2 class="text-light text-center">@ViewData["Title"]</h2>

<div class="container">
    <form asp-action="PlaceOrder" method="post">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label class="text-light" for="FirstName">First Name</label>
                <input type="text" class="form-control form-control-sm" id="FirstName" name="FirstName" value="@Model.FirstName">
            </div>
            <div class="form-group col-md-6">
                <label class="text-light" for="LastName">Last Name</label>
                <input type="text" class="form-control form-control-sm " id="LastName" name="LastName" value="@Model.LastName">
            </div>
        </div>
        <div class="form-group">
            <label class="text-light" for="PhoneNumber">Phone Number</label>
            <input type="text" class="form-control form-control-sm" id="PhoneNumber" name="PhoneNumber" value="@Model.PhoneNumber">
        </div>
        <div class="form-group">
            <label for="City">City</label>
            <input type="text" class="form-control form-control-sm " id="City" name="City" value="@Model.City">
        </div>
        <div class="form-group">
            <label class="text-light" for="Address">Address</label>
            <input type="text" class="form-control form-control-sm" id="Address" name="Address" value="@Model.Address">
        </div>
        <div class="form-group">
            <label class="text-light" for="PostalCode">Postal Code</label>
            <input type="text" class="form-control form-control-sm" id="PostalCode" name="PostalCode" value="@Model.PostalCode">
        </div>
        <div class="form-group">
            <label class="text-light" for="AdditionalInformation">Additional Information</label>
            <textarea class="form-control form-control-sm" id="AdditionalInformation" name="AdditionalInformation">@Model.AdditionalInformation</textarea>
        </div>
        <hr />
        <div class="text-center">
            <button type="submit" class="btn btn-outline-success">Place Order</button>
        </div>
    </form>
</div>
