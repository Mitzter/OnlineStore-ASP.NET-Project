@using OnlineStore.Web.Models.UserModels;
@using OnlineStore.Web.Data;
@using static OnlineStore.Web.Infrastructure.GetPrincipalExtension;
@inject Microsoft.AspNetCore.Identity.UserManager<ApplicationUser> UserManager
@inject OnlineStoreDbContext dbContext
@model AllItemsViewModel

<div class="col-md-2">
    <div class="card mb-2">
        <div class="card-body d-flex flex-column align-items-center">
            
            <div class="d-flex justify-content-center" style="height: 200px;">
                <img class="card-img-top" src="@Model.ImageUrl" alt="Image" style="max-width: 250px; max-height: 200px;" />
            </div>
            <h4>@Model.Name</h4>

            @if (User.Identity.IsAuthenticated)
            {
                var userId = this.User.GetId();

                var isBulkBuyer = dbContext.BulkBuyers.Any(b => b.UserId.ToString() == userId);

                if (isBulkBuyer)
                {
                            <h6>
                                Price:
                                <b>@($"{Model.Price:f2}") BGN</b>
                            </h6>
                            <h6>
                                Bulk Price:
                                <b>@($"{Model.BulkPrice:f2}") BGN</b>
                            </h6>
                }
                else
                {
                            <h6>
                                Price:
                                <b>@($"{Model.Price:f2}") BGN</b>
                            </h6>
                }
            }
            else
            {
                    <h6>
                        Price:
                        <b>@($"{Model.Price:f2}") BGN</b>
                    </h6>
            }

            <br />
            <a asp-area="" asp-controller="Store" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">Details</a>
        </div>
    </div>
</div>
