@model AllItemsViewModel

<div class="col-md-4">
     <div class="card mb-3">
     <img class="card-img-top" src="@Model.ImageUrl" alt="Image">
     <div class="card-body text-center">
         <h4>@Model.Name</h4>
       
         <h6>
             Price:
             <b>@($"{Model.Price:f2}") BGN</b>
         </h6>
         
         
         <br />
         <a asp-controller="Store" asp-action="Details" asp-route-id="@Model.Id"
         class="btn btn-info">Details</a>

     
     </div>
 </div>
</div>