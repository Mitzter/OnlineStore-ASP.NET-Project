@model IEnumerable<ForumCategoryFormModel>

@{
    ViewData["Title"] = "Forum";
    var items = Model.ToList();
}
<style>
    .section-outline{
        border: 5px solid brown;
        padding: 10px;
        background-color:darkgray
    }
</style>

<div class="container-fluid d-flex justify-content-center">
    
</div>

<hr/>

<div class="container-fluid d-flex text-light justify-content-center">
    <div class="col-md-2">
            <h5 class="text-light align-content-center">Top Forum Discussions</h5>
            <nav class="w1-sidebar w1-bar-block">
                <div class="container-fluid align-items-md-start w1-sidebar">
                    <h8 class="text-white">Forum post One</h8>

                </div>
                <h2></h2>
                <div class="container-fluid align-items-md-start w1-sidebar">
                    <h8 class="text-white">Forum post Two</h8>

                </div>
                <h2></h2>
                <div class="container-fluid align-items-md-start w1-sidebar">
                    <h8 class="text-white">Forum post Three</h8>

                </div>
                <h2></h2>
                <div class="container-fluid align-items-md-start w1-sidebar">
                    <h8 class="text-white">Forum post Four</h8>

                </div>
            </nav>
        </div>
    <div class="row">

        <div class="container-fluid d-flex justify-content-center">
            <h1 class="text-light justify-content-center">
                @ViewBag.Title
            </h1>
        </div>

        <hr/>
    
        @foreach (var item in items)
        {
                <div class="col">
                        <div class="card section-outline mb-3 text-center bg-gradient">
                        <div class="card-body">
                            <h3><a class="text-light" href="@Url.Action("Category", "Forum", new { categoryId = item.Id })">@item.Name</a></h3>
                        </div>
                    </div>
                </div>
                <hr />
        }
    </div>
</div>
