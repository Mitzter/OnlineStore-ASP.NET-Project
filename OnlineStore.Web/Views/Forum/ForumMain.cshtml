@model IEnumerable<ForumCategoryFormModel>

@{
    ViewData["Title"] = "Forum";
    var items = Model.ToList();
}
<style>
    .section-outline{
        border: 5px solid brown;
        padding: 10px;
        background-color:darkgray
    }
</style>

<div class="container-fluid d-flex justify-content-center">
    <h1 class="text-light justify-content-center">
        @ViewBag.Title
    </h1>
</div>

<hr/>

<div class="container-fluid d-flex text-light justify-content-center">
    
    <div class="row">
        @foreach (var item in items)
        {
                <div class="col">
                        <div class="card section-outline mb-3 text-center bg-gradient">
                        <div class="card-body">
                            <h3><a class="text-light" href="@Url.Action("Category", "Forum", new { categoryId = item.Id })">@item.Name</a></h3>
                        </div>
                    </div>
                </div>
                <hr />
        }
    </div>
</div>
