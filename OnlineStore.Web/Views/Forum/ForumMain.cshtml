@model IEnumerable<ForumCategoryFormModel>

@{
    ViewData["Title"] = "Forum";
    var items = Model.ToList();
}

<div class="container-fluid text-light d-flex justify-content-center">
    <div class="row">
        @foreach (var item in items)
        {
                <div class="col">
                    <div class="card border-primary mb-3 text-center bg-gradient">
                        <div class="card-body">
                            <h3><a href="@Url.Action("Category", "Forum", new { categoryId = item.Id })">@item.Name</a></h3>
                        </div>
                    </div>
                </div>
        }
    </div>
</div>
