@using OnlineStore.Web.ViewModels.FormModels.UserFormModels;
@model BecomeBulkClientFormModel

@{
    ViewBag.Title = "Register your Company";
}

<h2 class="text-center text-light">@ViewBag.Title</h2>
<hr />

<style>
    .image-preview-container {
        display: flex;
        justify-content: center;
    }
</style>

<div class="row">
     <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6 text-light">
         <form method="post">
             <div class="form-group">
                 <label asp-for="CompanyName"></label>
                 <input asp-for="CompanyName" class="form-control" placeholder="">
                 <span asp-validation-for="CompanyName" class="small text-danger"></span>
             </div>
              <div class="form-group">
                 <label asp-for="VATNumber"></label>
                 <input asp-for="VATNumber" class="form-control" placeholder="">
                 <span asp-validation-for="VATNumber" class="small text-danger"></span>
             </div>
              <div class="form-group">
                 <label asp-for="PhoneNumber"></label>
                 <input asp-for="PhoneNumber" class="form-control" placeholder="">
                 <span asp-validation-for="PhoneNumber" class="small text-danger"></span>
             </div>
             <div class="form-group">
                 <label asp-for="FinancialManager"></label>
                 <input asp-for="FinancialManager" class="form-control" placeholder="">
                 <span asp-validation-for="FinancialManager" class="small text-danger"></span>
             </div>


             <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Save" />
             </div>
         </form>
     </div>
</div>